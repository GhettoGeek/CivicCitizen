<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="9dp"
        android:textSize="20sp"
        tools:text="RANSOM TOWER APTS" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        tools:text="50 Ransom Avenue Northeast, Grand Rapids, MI 94402" />

    <TextView
        android:id="@+id/tvDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/tvName"
        tools:text="8/6-8/6" />

    <TextView
        android:id="@+id/tvPollingHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAddress"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        tools:text="Tue, Aug 4: 7 am - 8 pm" />

    <TextView
        android:id="@+id/tvType"
        android:layout_width="145dp"
        android:layout_height="23dp"
        android:layout_below="@+id/tvPollingHours"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/colored_pill"
        android:gravity="center_horizontal|center_vertical"
        android:textStyle="bold"
        tools:text="Early Drop Off Site" />

    <TextView
        android:id="@+id/tvNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvType"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:text="Notes: " />
</RelativeLayout>
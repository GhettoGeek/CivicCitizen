<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/election_card"
    android:padding="0dp">

    <Button
        android:id="@+id/btnSave"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCompose"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/action_button"
        android:text="Send Email"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/etCompose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSubject"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/ivClose"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Compose a message to your representative!"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:padding="10dp"
        android:textColor="@color/darkDarkBlue"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorHint="@color/lightBlue"
        android:textColorLink="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:srcCompat="@drawable/ic_close_24px" />

    <EditText
        android:id="@+id/etSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/ivClose"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Subject"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="@color/darkDarkBlue"
        android:textColorHint="@color/lightBlue" />


</RelativeLayout>